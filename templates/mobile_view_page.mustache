<%#error%>
<ion-card>
    <ion-card-header>
        <ion-card-title>Media Status</ion-card-title>
    </ion-card-header>

    <ion-card-content>
        <ion-item>
            <%#data%>
            {{ 'plugin.<% message %>' | translate: {$a:  '<% data %>'} }}
            <%/data%>
            <%^data%>
            {{ 'plugin.<% message %>' | translate }}
            <%/data%>
        </ion-item>
    </ion-card-content>
</ion-card>
<%/error%