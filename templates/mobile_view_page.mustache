{{=<% %>=}}
<%^error%>
<ion-content>
    <core-iframe [src]="'<%host%>/p/<%entryobj.partnerId %>/embedPlaykitJs/uiconf_id/<%uiconf%>?iframeembed=true&entry_id=<%entryobj.id%>'" [allowFullscreen]="1"></core-iframe>
</ion-content>
